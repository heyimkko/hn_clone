
<div class="container">
  
  <article>
    <header>
      <h2>  <%= @post.title %></h2>
    </header>
    <div>
      <p> <%= @post.author %></p>
      <p> <%= @post.email %></p>
      <p> <%= @post.body %></p>
      <div class='tags'>
      <% unless @tags ==[] %>   
        <p> Tags <% @tags.each do |tag| %> </p>
          <p><%= tag.name %></p>
          <% end %>
      <% end %>    
      </div>
    </div>
    </hr>
    <div>
      <form action="/posts/<%= @post.id %>" method="post">
        <input type="hidden" name="_method" value="delete" />
        <input type='submit' value='Delete'>
      </form> 
      <form action="/edit/<%= @post.id %>" method="get">  
        <input type='submit' value='Update'>
      </form>
    </div>  
  <article>  
    <a href="/">&larr; Return to home<a/>
</div>
