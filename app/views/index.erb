  

<div class="container">
  <h1>Welcome to your blog</h1>
    <% unless @posts == [] %>
    <p>These are the posts that you have already written</p>
      <table class="posts">
        <th>Blog Post</th>
        <th>Blog Author</th>
        <% @posts.each do |post| %>
          <tr>
            <td>
            <a href= <%= post.id %>> <%= post.title %> </a>, <%= post.author %>
                <form action="/posts/<%= post.id %>" method="post">
                  <input type="hidden" name="_method" value="delete" />
                  <input type='submit' value='Delete'> 
                </form>
                <form action="/edit/<%= post.id %>" method="get">  
                  <input type='submit' value='Update'>
                </form>
            <td>
          </tr>
        <% end %>  
      </table>
    <% end %>
