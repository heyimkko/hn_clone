<form action="/new" method="POST" class="input">
  <input type="text" name="title" size="35" placeholder="Title" value='<%= @post.title %>'>
  <input type="text" name="url" size="35" placeholder="URL" value='<%= @post.url %>'>
  <div class="text-form">OR</div>
  <textarea name="content" rows="5" cols="30" placeholder="Content here"><%= @post.content %></textarea>
  <input type="submit" value="submit" class="button">
</form>
